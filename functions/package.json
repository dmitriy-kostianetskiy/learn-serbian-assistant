{
  "name": "functions",
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "bot": "dotenvx run --env-file=.env.test -- ts-node src/localBot.ts",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "dotenvx run --env-file=.env.test -- jest",
    "test-unit": "npm run test -- '^((?!\\.int).)*$'",
    "test-integration": "npm run test -- '\\.int\\.'",
    "test:ci": "jest",
    "test-unit:ci": "jest '^((?!\\.int).)*$'",
    "test-integration:ci": "jest '\\.int\\.'"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/pubsub": "^4.4.0",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.2.0",
    "openai": "^4.47.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.31.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "firebase-functions-test": "^3.1.0",
    "firebase-tools": "^13.6.1",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "private": true
}
